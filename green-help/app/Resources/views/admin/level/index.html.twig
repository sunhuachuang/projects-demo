{% extends 'admin/base.html.twig' %}

{% block content %}
  <h4>#晋级管理</h4>
  <form class="form-inline">
    <div class="form-group">
      <input type="text" name="username" class="form-control" id="exampleInputPassword3" placeholder="会员编号">
    </div>
    <div class="form-group">
      <select class="form-control">
        <option>全部</option>
        <option>见习经理</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">立即搜索</button>
  </form>
  <br>
  <table class="table table-hover table-bordered">
    <thead>
      <th>序列号</th>
      <th>会员编号</th>
      <th>姓名</th>
      <th>联系电话</th>
      <th>开通时间</th>
      <th>会员级别</th>
      <th>总奖金</th>
      <th>升级</th>
    </thead>
    <tbody>
      {% for user in users %}
      <tr>
        <td>{{ user.id }}</td>
        <td>{{ user.username }}</td>
        <td>{{ user.bankName }}</td>
        <td>{{ user.phone }}</td>
        <td>{{ user.createdAt|date('Y-m-d h:i:s') }}</td>
        <td>{{ user.level }}</td>
        <td></td>
        <td><a href="{{ path('admin_level_show', {id: user.id}) }}" class="btn btn-sm btn-default">升级</a></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
